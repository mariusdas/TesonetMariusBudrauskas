<Window x:Class="TesonetMariusBudrauskas.Views.ServersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesonetMariusBudrauskas.Views"
        mc:Ignorable="d"
        Title="ServersView" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <ListView ItemsSource="{Binding Path=Servers}">
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Name}" 
                   Header="Name" Width="Auto"/>
                <GridViewColumn DisplayMemberBinding="{Binding Distance}" 
               Header="Distance" Width="Auto"/>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
